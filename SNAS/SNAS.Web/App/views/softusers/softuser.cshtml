<div class="portlet light bordered" ng-controller="app.views.softuser as vm">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon icon-grid font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">用户列表</span>
        </div>
        <div class="actions">
            <button type="button" class="btn btn-primary" ng-click="vm.createSoftUser()"><i class="icon icon-plus"></i>添加用户</button>
        </div>
    </div>

    <div class="portlet-body" style="padding-top: 0px">

        <!-- BEGIN Portlet PORTLET-->



        <milo-Search search-items="searchItems" search-conds="searchConds" searchHandle="queryData()"></milo-Search>

        <div class="table-scrollable ">
            <table class="table table-bordered table-hover table-striped table-advance">
                <thead>
                    <tr>
                        <th style="width: 40px;text-align: center"> ID </th>
                        <th> 登录名称 </th>
                        <th style="width: 80px;text-align: center"> 来源 </th>
                        <th style="width: 50px;text-align: center"> 状态 </th>
                        <th style="width: 110px; text-align: center"> 手机号码 </th>
                        <th style="width: 110px; text-align: center"> QQ </th>
                        <th style="width: 160px; text-align: center"> 注册时间 </th>
                        <th style="width: 210px; text-align: center"> 操作 </th>
                    </tr>
                </thead>
                <tbody>

                    <tr role="row" ng-repeat="item in vm.items" class="even">
                        <td style="text-align: center;vertical-align: middle">{{item.id}}</td>
                        <td style="vertical-align: middle">{{item.loginName}}</td>
                        <td style="text-align: center;vertical-align: middle">{{item.sourceAlias}}</td>
                        <td style="text-align: center; vertical-align: middle">{{item.isActive?'启用':'停用'}}</td>
                        <td style="text-align: center; vertical-align: middle">{{item.mobile}}</td>
                        <td style="text-align: center; vertical-align: middle">{{item.qq}}</td>
                        <td style="text-align: center; vertical-align: middle">{{item.creationTime | date:'yyyy-MM-dd HH:mm:ss'}}</td>
                        <td style="text-align: center; vertical-align: middle" class="table-operating">
                            <a href="javascript:;" ng-click="vm.edit(item.id)">修改</a><span class="divider">|</span>
                            <a href="javascript:;" ng-click="vm.delete(item.id)">删除</a><span class="divider">|</span>
                            <a href="javascript:;" ng-click="vm.chgPassword(item.id)">修改密码</a><span class="divider">|</span>
                            <a href="javascript:;" ng-click="vm.useLicense(item.id)">授权</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <milo-Pagination page-info="pageInfo" pagingHandle="paging()"></milo-Pagination>

    </div>
</div>