<div class="portlet light bordered" ng-controller="app.views.soft as vm">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon icon-grid font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">软件列表</span>
        </div>
        <div class="actions">
            <button type="button" class="btn btn-primary" ng-click="vm.createSoft()"><i class="icon icon-plus"></i>添加软件</button>

            @*<div class="btn-group">

                <button class="btn yellow dropdown-toggle" data-toggle="dropdown">
                    <i class="icon icon-list"></i>
                    更多操作
                    <i class="fa fa-angle-down"></i>
                </button>
               
            </div>*@
        </div>
    </div>

    <div class="portlet-body" style="padding-top: 0px">

        <!-- BEGIN Portlet PORTLET-->



        <milo-Search search-items="searchItems" search-conds="searchConds" searchHandle="queryData()"></milo-Search>
        <div class="dataTables_wrapper no-footer">
            <div class="table-scrollable ">
                <table class="table table-bordered table-hover table-striped table-advance">
                    <thead>
                        <tr>
                            <th style="width: 40px;text-align: center"> ID </th>
                            <th> 名称 </th>
                            <th style="width: 150px;text-align: center"> appId </th>
                            <th style="width: 100px;text-align: center"> 绑定模式 </th>
                            <th style="width: 80px;text-align: center"> 运行模式 </th>
                            <th style="width: 180px; text-align: center"> 操作 </th>
                            <th style="width: 180px; text-align: center"> 配置 </th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr role="row" ng-repeat="item in vm.items" class="even">
                            <td style="text-align: center;vertical-align: middle">{{item.id}}</td>
                            <td style="vertical-align: middle">{{item.name}}</td>
                            <td style="text-align: center;vertical-align: middle">{{item.appId}}</td>
                            <td style="text-align: center;vertical-align: middle">{{item.bindModeAlias}}</td>
                            <td style="text-align: center;vertical-align: middle">{{item.runModeAlias}}</td>
                            <td style="text-align: center; vertical-align: middle" class="table-operating">
                                <a href="javascript:;" ng-click="vm.edit(item.id)">修改</a><span class="divider">|</span>
                                <a href="javascript:;" ng-click="vm.delete(item.id)">删除</a><span class="divider">|</span>
                                <a href="javascript:;" ng-click="vm.gotoSoftLicense(item.id)">卡密</a><span class="divider">|</span>
                                <a href="/swagger/ui/index#/" target="_blank">API</a>
                            </td>

                            <td style="text-align: center; vertical-align: middle" class="table-operating">
                                <a href="javascript:;" ng-click="vm.gotoSoftLicenseOption(item.id)">价格</a><span class="divider">|</span>
                                <a href="javascript:;" ng-click="vm.showMoreOpenOption(item.id)">多开</a><span class="divider">|</span>
                                <a href="javascript:;" ng-click="vm.showBindOption(item.id)">绑定</a><span class="divider">|</span>
                                <a href="javascript:;" ng-click="vm.showRegisterOption(item.id)">注册</a>
                            </td>

                        </tr>


                    </tbody>
                </table>
            </div>

            <milo-Pagination page-info="pageInfo" pagingHandle="paging()"></milo-Pagination>

            
        </div>
    </div>
</div>